<Window x:Class="Compiler.Views.ConfirmExitWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Предупреждение" Height="150" Width="300"
        WindowStartupLocation="CenterOwner" WindowStyle="ToolWindow">
    <Grid Background="#3FF1DCDC" >
        <TextBlock Text="Вы уверены, что хотите выйти? Файл не сохранен." 
                   VerticalAlignment="Top" HorizontalAlignment="Center" 
                   Margin="0,38,0,0" Foreground="#FF64537D"/>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="10">
            <Button Content="Сохранить" Width="100" Margin="10" Click="SaveButton_Click" BorderThickness="0" Foreground="#FF4A4848" Background="#FFFFCBCB" />
            <Button Content="Да, выйти" Width="100" Height="25" Margin="10" Click="ExitButton_Click" BorderThickness="0" Foreground="#FF4A4848" Background="#FFF9E9E9" />
        </StackPanel>
    </Grid>
</Window>

